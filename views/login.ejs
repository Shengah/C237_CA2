<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login Lunar Sleep Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            background-color: #000;
            color: #fff;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        /* Transparent frosted navbar */
        .navbar {
            background-color: rgba(17, 17, 17, 0.5);
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            z-index: 10;
            position: fixed;
            width: 100%;
        }

        .navbar .nav-link,
        .navbar .navbar-brand {
            color: #fff;
        }

        .navbar .nav-link:hover,
        .navbar .navbar-brand:hover {
            color: #ccc;
        }
        .hoverable {
            display: inline-block;
            backface-visibility: hidden;
            vertical-align: middle;
            position: relative;
            box-shadow: 0 0 1px rgba(0, 0, 0, 0);
            transform: translateZ(0);
            transition-duration: 0.3s;
            transition-property: transform;
        }

        .hoverable:before {
            position: absolute;
            pointer-events: none;
            z-index: -1;
            content: '';
            top: 100%;
            left: 5%;
            height: 10px;
            width: 90%;
            opacity: 0;
            background: radial-gradient(ellipse at center, rgba(255, 255, 255, 0.35) 0%, rgba(255, 255, 255, 0) 80%);
            transition-duration: 0.3s;
            transition-property: transform, opacity;
        }

        .hoverable:hover,
        .hoverable:focus {
            transform: translateY(-5px);
        }

        .hoverable:hover:before,
        .hoverable:focus:before {
            opacity: 1;
            transform: translateY(-5px);
        }

        /* âœ… Optional Bounce Animation */
        @keyframes bounce-animation {
            16.65% {
                transform: translateY(8px);
            }

            33.3% {
                transform: translateY(-6px);
            }

            49.95% {
                transform: translateY(4px);
            }

            66.6% {
                transform: translateY(-2px);
            }

            83.25% {
                transform: translateY(1px);
            }

            100% {
                transform: translateY(0);
            }
        }

        .bounce {
            animation-name: bounce-animation;
            animation-duration: 2s;
        }

        /* Login form card */
        .login-card {
            background-color: rgba(30, 30, 30, 0.9);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.05);
            width: 100%;
            max-width: 400px;
            z-index: 1;
            position: relative;
        }

        .form-control {
            background-color: #2c2c2c;
            color: #fff;
            border: 1px solid #555;
        }

        .form-control::placeholder {
            color: #aaa;
        }

        .btn-primary {
            background-color: #fdd835;
            border: none;
            color: #000;
        }

        .btn-primary:hover {
            background-color: #fff176;
        }

        /* Star canvas */
        #stars {
            position: fixed;
            top: 0;
            left: 0;
            z-index: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }
    </style>
</head>

<body>
    <!-- â­ Starry Background -->
    <canvas id="stars"></canvas>

    <!-- ðŸŒ™ Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fa-solid fa-moon me-2"></i> Lunar
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link hoverable" id="len4" href="#"><i
                                class="fa-solid fa-envelope me-1"></i>Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ðŸ’¤ Login Form -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="login-card mt-5">
            <h6 class="text-center mb-4">WELCOME BACK</h6>
            <h2 class="text-center mb-4">Login to Lunar <i class="fa-solid fa-moon"></i></h2>

            <% if (errors && errors.length> 0) { %>
                <div class="alert alert-danger">
                    <% errors.forEach(function(error) { %>
                        <p>
                            <%= error %>
                        </p>
                        <% }); %>
                </div>
                <% } %>
                    <% if (messages && messages.length> 0) { %>
                        <div class="alert alert-success">
                            <% messages.forEach(function(message) { %>
                                <p>
                                    <%= message %>
                                </p>
                                <% }); %>
                        </div>
                        <% } %>

                            <!-- Login Form -->
                            <form action="/login" method="POST">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address:</label>
                                    <input type="email" id="email" name="email" class="form-control"
                                        placeholder="you@example.com" required>
                                </div>
                                <div class="mb-4">
                                    <label for="password" class="form-label">Password:</label>
                                    <input type="password" id="password" name="password" class="form-control"
                                        placeholder="********" required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Login</button>
                            </form>
                            <div class="text-center mt-3">
                                <a href="#" class="text-white text-decoration-none">Forgot your password?</a>
                            </div>
                            <p class="mt-2 mb-0" style="font-size: 0.9rem;">
                                Don't have an account? <a href="/register"
                                    class="text-warning text-decoration-none">Sign up and get started!</a>
                            </p>
        </div>
    </div>


    <!-- ðŸŒ  Star animation script -->
    <script>
        const canvas = document.getElementById('stars');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const stars = [];
        for (let i = 0; i < 120; i++) {
            stars.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                radius: Math.random() * 1.5,
                speed: Math.random() * 0.5 + 0.1,
            });
        }

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = "#ffffff";
            stars.forEach(star => {
                ctx.beginPath();
                ctx.arc(star.x, star.y, star.radius, 0, Math.PI * 2);
                ctx.fill();
                star.y += star.speed;
                if (star.y > canvas.height) {
                    star.y = 0;
                    star.x = Math.random() * canvas.width;
                }
            });
            requestAnimationFrame(animate);
        }

        animate();
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
    </script>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>