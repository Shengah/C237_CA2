<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Sleep Log</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-dark text-white">
  <div class="container mt-5">
    <h2 class="mb-4"><i class="fa-solid fa-bed me-2"></i>Add Sleep Log</h2>

    <form action="/addlog" method="POST">
      <!-- Sleep Date -->
      <div class="mb-3">
        <label for="sleepDate" class="form-label">Sleep Date</label>
        <input type="date" name="sleepDate" id="sleepDate" class="form-control" required>
      </div>

      <!-- Sleep Time -->
      <div class="mb-3">
        <label for="sleepTime" class="form-label">Sleep Time</label>
        <input type="time" name="sleepTime" id="sleepTime" class="form-control" required>
      </div>

      <!-- Wake Time -->
      <div class="mb-3">
        <label for="wakeTime" class="form-label">Wake Time</label>
        <input type="time" name="wakeTime" id="wakeTime" class="form-control" required>
      </div>

      <!-- Notes -->
      <div class="mb-3">
        <label for="notes" class="form-label">Notes</label>
        <textarea name="notes" id="notes" class="form-control" rows="3" placeholder="e.g. Slept well, had dreams..."></textarea>
      </div>

      <!--sleepQuality -->
      <div class="mb-4">
        <label for="sleepQuality" class="form-label">Mood</label>
        <select name="sleepQuality" id="sleepQuality" class="form-select" required>
          <option value="">-- Sleep Quality --</option>
          <option value="great">Great</option>
          <option value="okay">Okay</option>
          <option value="good">Good</option>
          <option value="poor">Poor</option>
        </select>
      </div>

      <!-- Mood -->
      <div class="mb-4">
        <label for="moodAfter" class="form-label">Mood</label>
        <select name="moodAfter" id="moodAfter" class="form-select" required>
          <option value="">-- Select Mood --</option>
          <option value="üòä">üòä Great</option>
          <option value="üòê">üòê Okay</option>
          <option value="üò¥">üò¥ Good</option>
          <option value="üò°">üò° Poor</option>
        </select>
      </div>

      <!-- Buttons -->
      <button type="submit" class="btn btn-primary">
        <i class="fa-solid fa-circle-plus me-1"></i> Save Log
      </button>

      <a href="/dashboard" class="btn btn-outline-light ms-2">Cancel</a>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
