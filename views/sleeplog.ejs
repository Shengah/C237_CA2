<!DOCTYPE html>
<html>
<head>
    <title>Sleep Logs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            color: #2c3e50;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <h1>Sleep Logs</h1>

    <table>
        <thead>
            <tr>
                <th>Log ID</th>
                <th>User ID</th>
                <th>Sleep Date</th>
                <th>Sleep Time</th>
                <th>Wake Time</th>
                <th>Sleep Quality</th>
                <th>Mood After</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            <% if (sleepLogs.length > 0) { %>
                <% sleepLogs.forEach(log => { %>
                    <tr>
                        <td><%= log.logId %></td>
                        <td><%= log.userId %></td>
                        <td><%= log.sleepDate.toISOString().split('T')[0] %></td>
                        <td><%= log.sleepTime %></td>
                        <td><%= log.wakeTime %></td>
                        <td><%= log.sleepQuality %></td>
                        <td><%= log.moodAfter %></td>
                        <td><%= log.notes %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="8">No sleep logs found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
